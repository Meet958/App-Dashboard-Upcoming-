<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dashboard">

    <!-- ✅ Required for API/network calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="MediTrack"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dashboard"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- ✅ Splash screen as launcher -->
        <activity
            android:name="com.example.meditrack.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MediTrack.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Login screen -->
        <activity
            android:name="com.example.meditrack.LoginActivity"
            android:exported="true" />

        <!-- ✅ Sign up screen -->
        <activity
            android:name="com.example.meditrack.SignUpActivity"
            android:exported="true" />

        <!-- ✅ Dashboard main screen -->
        <activity
            android:name="com.example.dashboard.MainActivity"
            android:exported="true" />

    </application>
</manifest>
